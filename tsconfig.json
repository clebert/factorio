{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["esnext"],
    "declaration": false,
    "sourceMap": true,
    "inlineSources": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "plugins": [{"name": "typescript-tslint-plugin"}],
    "baseUrl": "./packages",
    "paths": {"@factorio/*": ["./*/src"]}
  },
  "tstl": {
    "luaTarget": "5.2",
    "noHeader": true,
    "luaLibImport": "inline",
    "sourceMapTraceback": true
  }
}
